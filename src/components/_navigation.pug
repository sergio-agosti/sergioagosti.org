nav(aria-label="Theme preferences", class="fixed top-6 right-6 noscript:hidden")
  button(
    class="flex rounded-md p-2 text-gray-600 transition hover:bg-gray-200 hover:text-current dark:text-gray-400 dark:hover:bg-gray-800"
  )
    svg(class="size-5 stroke-current not-in-[.dark]:hidden", viewBox="0 0 24 24")
      title Theme: dark. Activate to switch to light.
      path(
        stroke-linecap="round",
        stroke-linejoin="round",
        stroke-width="2",
        d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
      )
    svg(class="size-5 stroke-current not-in-[.light]:hidden", viewBox="0 0 24 24")
      title Theme: light. Activate to switch to system.
      path(
        stroke-linecap="round",
        stroke-linejoin="round",
        stroke-width="2",
        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
      )
    svg(class="size-5 stroke-current in-[.dark,.light]:hidden", viewBox="0 0 24 24")
      title Theme: system. Activate to switch to dark.
      path(
        stroke-linecap="round",
        stroke-linejoin="round",
        stroke-width="2",
        d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
      )
  p(aria-live="polite", role="status", class="sr-only")
  script.
    ((nav, themes) => {
      const status = nav.querySelector("[role=status]");
      let theme = themes.at(themes.indexOf(localStorage.theme));
      nav.querySelector("button").addEventListener("click", () => {
        theme = themes[(themes.indexOf(theme) + 1) % themes.length];
        theme === "system" ? localStorage.removeItem("theme") : (localStorage.theme = theme);
        document.dispatchEvent(new CustomEvent("theme-change", { detail: { theme } }));
      });
      document.addEventListener("theme-change", (event) => {
        status.textContent = `Theme set to ${event.detail.theme}.`;
      });
    })(document.currentScript.parentElement, ["dark", "light", "system"]);
