extends @/templates/_layout.pug

block content
  header(class="container my-8 space-y-2 sm:my-16")
    h1(class="-ml-1 text-4xl tracking-tight text-teal-600 transition dark:text-teal-400") Sergio Agosti
    p(class="text-lg") Open-source web developer
  main(class="container my-8 space-y-8 sm:my-16 sm:space-y-16")
    section(aria-labelledby="about-heading", class="space-y-4")
      h2#about-heading(class="sr-only") About
      p I develop accessible, high-performance websites and web applications using open-source technologies, with thoughtful use of AI.
      p With over #[time(datetime="P15Y") 15 years] of experience, my work focuses on code quality, best practices, and long-term maintainability.
    section(aria-labelledby="contact-heading", class="space-y-4")
      h2#contact-heading(class="sr-only") Contact
      p I'm available for projects and collaboration.
        button(class="button", commandFor="contact-dialog", command="show-modal") Contact me

      dialog#contact-dialog(
        class="size-full max-h-none max-w-none content-center bg-gray-100 text-inherit transition not-open:opacity-0 dark:bg-gray-900 starting:opacity-0"
      )
        div(class="container py-4")
          form(method="dialog", class="flex justify-end")
            button(
              class="flex rounded-md p-2 text-gray-600 transition hover:bg-gray-200 hover:text-current dark:text-gray-400 dark:hover:bg-gray-800"
            )
              svg(class="size-5 stroke-current", viewBox="0 0 24 24")
                title Close
                path(
                  stroke-linecap="round",
                  stroke-linejoin="round",
                  stroke-width="2",
                  d="M6 18L18 6M6 6l12 12"
                )
          include @/components/_contact.pug
